{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "ESNext.AsyncIterable",
      "dom",
      "es6"
    ],
    "jsx": "react",
    "jsxFactory": "h",
    "strict": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./src/**/*",
    ".global/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
